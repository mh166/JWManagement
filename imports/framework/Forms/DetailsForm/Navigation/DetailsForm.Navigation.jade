template(name="DetailsFormNavigation")

  .navigation-wrapper
    nav.navbar.navbar-fixed-top(class='{{getNavbarStyle}}')

      if hasBackLink
        a.navbar-back(href="{{getBackLink}}")
          i.fa.fa-angle-left.m-r-xs
          | {{_ 'navigation.back'}}

      if showTitle
        .navbar-title {{getTitle}}
